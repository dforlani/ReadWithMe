<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.quesitos.QuesitosCompletoTextoNarrativo"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_quesitos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Marque as dificuldades encontradas:" />

                <CheckBox
                    android:id="@+id/act_comentar_difuldade_check1_Q13_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_comentar_difuldade_check1_Q13_1"
                    android:text="Vocabulário antigo, com muitas palavras em desuso" />

                <CheckBox
                    android:id="@+id/act_comentar_difuldade_check2_Q13_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_comentar_difuldade_check2_Q13_1"
                    android:text="Vocabulário muito técnico, ainda não conheço bem o assunto" />

                <CheckBox
                    android:id="@+id/act_comentar_difuldade_check3_Q13_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_narrativo_as_figuras"
                    android:text="Vocabulário de uma classe social muito específica" />

                <CheckBox
                    android:id="@+id/act_comentar_difuldade_check4_Q13_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_comentar_difuldade_check4_Q13_1"
                    android:text="A forma como o autor coloca seus argumentos é confusa" />

                <CheckBox
                    android:id="@+id/act_comentar_difuldade_check5_Q13_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_comentar_difuldade_check5_Q13_1"
                    android:text="O estilo do autor é muito rebuscado ou intrincado" />

                <CheckBox
                    android:id="@+id/act_comentar_difuldade_check6_Q13_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_comentar_difuldade_check6_Q13_1"
                    android:text="O pensamento do autor é muito abstrato, difícil de visualizar" />

                <CheckBox
                    android:id="@+id/act_comentar_difuldade_check7_Q13_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_comentar_difuldade_check7_Q13_1"
                    android:text="Dificuldade em relacionar o texto ao objetivo de leitura" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A leitura foi prazerosa e interessante? Qual a impressão mais vívida provocada pela leitura?Descreva de forma mais detalhada suas dificuldades, com citações:" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q13_2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q13_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Como você resolveu suas dificuldades?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q13_3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q13_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Você pretende resolvê-las com alguma estratégia? Qual?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q13_4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q13_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <include
                    layout="@layout/buttons_voltar_continuar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>



