<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.quesitos.QuesitosCompletoTextoNarrativo"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_quesitos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A leitura foi prazerosa e interessante? Qual a impressão mais vívida provocada pela leitura?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O que acontece na história? Qual o enredo?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quem são os personagens, como são, como se relacionam? Quais são mais importantes para a história, quais são coadjuvantes?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="O que se pode registrar sobre o espaço da narrativa? Algum elemento espacial se apresenta com mais destaque?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O que se pode registrar sobre a sequência temporal dos acontecimentos narrados? O tempo é cronológico, psicológico? Os fatos são narrados na sequência em que acontecem? Há algo específico sobre o tempo que seja interessante registrar?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Há descrições? Como são?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_6"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Considerações de estilo"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Os meios de expressão"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qual o gênero literário escolhido? Isso é importante?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_7"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qual o tipo do narrador? Isso é importante?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qual o foco narrativo predominante: mostrar ou contar? Isso é importante?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_9"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Questões de linguagem que podem aparecer no texto:" />

                <CheckBox
                    android:id="@+id/act_narrativo_algumas_palavrasQ10_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_narrativo_algumas_palavras"
                    android:text="Algumas palavras utilizadas se destacam pela repetição, transformação" />

                <CheckBox
                    android:id="@+id/act_narrativo_o_vocabularioQ10_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_o_vocabulario"
                    android:text="O vocabulário como um todo se destaca" />

                <CheckBox
                    android:id="@+id/act_narrativo_as_figurasQ10_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_narrativo_as_figuras"
                    android:text="As figuras de linguagem utilizadas são importantes para o clima do texto" />

                <CheckBox
                    android:id="@+id/act_narrativo_o_tamanhoQ10_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_o_tamanho"
                    android:text="O tamanho das frases e dos parágrafos se destacam" />

                <CheckBox
                    android:id="@+id/act_narrativo_a_utilizacaoQ10_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_a_utilizacao"
                    android:text="A utilização da pontuação faz diferença" />

                <CheckBox
                    android:id="@+id/act_narrativo_o_equilibrioQ10_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_o_equilibrio"
                    android:text="O equilíbrio na utilização de verbos, substantivos e adjetivos é importante" />

                <CheckBox
                    android:id="@+id/act_narrativo_outraQ10_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_outra"
                    android:text="Outra" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Descreva de forma mais detalhada o que lhe chamou atenção na questão anterior, fazendo citações" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_11"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Há ilustrações acompanhando o texto? Como se relacionam com o texto? São importantes? Há algo a registrar sobre elas?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q10_12"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q10_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Você gostaria de analisar as ilustrações e o projeto do gráfico mais detalhadamente? *"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <RadioButton
                        android:id="@+id/radio_button_completo_2_texto_narrativo_sim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="Sim" />

                    <RadioButton
                        android:id="@+id/radio_button_completo_2_texto_narrativo_nao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="Não" />


                </RadioGroup>

                <include
                    layout="@layout/buttons_voltar_continuar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>



