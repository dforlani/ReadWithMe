<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.quesitos.QuesitosCompletoTextoPoesia"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_quesitos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A leitura foi prazerosa e interessante? Qual a impressão mais vívida provocada pela leitura?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Há um tema central no(s) poema(s)? Em caso de coletânea, há um eixo temático que amarre os poemas entre si? Isso é importante?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Como é a rima do poema?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Como é a métrica do poema?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O eu lírico se apresenta de alguma forma? Há algo a relatar?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Questões de linguagem que podem aparecer no texto:" />

                <CheckBox
                    android:id="@+id/act_poesia_algumas_palavras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_algumas_palavras"
                    android:text="@string/act_poesia_algumas_palavras" />

                <CheckBox
                    android:id="@+id/act_poesia_o_vocabulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_o_vocabulario"
                    android:text="@string/act_poesia_o_vocabulario" />

                <CheckBox
                    android:id="@+id/act_poesia_as_figuras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_as_figuras"
                    android:text="@string/act_poesia_as_figuras" />

                <CheckBox
                    android:id="@+id/act_poesia_o_tamanho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_o_tamanho"
                    android:text="@string/act_poesia_o_tamanho" />

                <CheckBox
                    android:id="@+id/act_poesia_a_utilizacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_a_utilizacao"
                    android:text="@string/act_poesia_a_utilizacao" />

                <CheckBox
                    android:id="@+id/act_poesia_o_equilibrio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_o_equilibrio"
                    android:text="@string/act_poesia_o_equilibrio" />

                <CheckBox
                    android:id="@+id/act_poesia_outra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:tag="act_poesia_outra"
                    android:text="@string/act_poesia_outra" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quais figuras de linguagem estão presentes no poema?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_7"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Descreva de forma mais detalhada o que lhe chamou atenção na questão anterior, fazendo citações" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A forma como o poema se distribui na página é importante? É um poema concreto?" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_act_q9_9"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_input_act_q9_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O texto é um poema épico ou narrativo? Você gostaria de analisar também a história existente no poema? *"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <RadioButton
                        android:id="@+id/radio_button_completo_2_texto_poesia_sim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="Sim" />

                    <RadioButton
                        android:id="@+id/radio_button_completo_2_texto_poesia_nao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="Não" />


                </RadioGroup>

                <include
                    layout="@layout/buttons_voltar_continuar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>



